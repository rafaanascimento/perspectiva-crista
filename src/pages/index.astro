---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import authors from "../data/authors.json";
import { formatDateBR } from "../utils/formatDateBR";

const posts = await getCollection("posts");
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
const getAuthorName = (id) => authors.find((author) => author.id === id)?.name ?? "Autor";
const formatDate = (value) =>
  new Date(value).toLocaleDateString("pt-BR", {
    day: "2-digit",
    month: "long",
    year: "numeric",
  });
const baseUrl = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const heroImageUrl = `${baseUrl}images/perspectiva_crista_hero_final_wide.png`;
---
<BaseLayout>
  <section class="hero" style={`--hero-image: url("${heroImageUrl}")`} aria-hidden="true"></section>

  <section class="post-list">
    <h2 class="section-title">Últimos artigos</h2>
    <div class="post-list__grid">
      {sortedPosts.map((post) => (
        <article class="post-card">
          <a class="post-card__image" href={`/posts/${post.slug}/`}>
            <img src={post.data.coverImage} alt={`Imagem de capa para ${post.data.title}`} />
          </a>
          <p class="post-card__meta">
            {formatDateBR(post.data.date)} · {getAuthorName(post.data.authorId)}
          </p>
          <h3>
            <a href={`${baseUrl}posts/${post.slug}/`}>{post.data.title}</a>
          </h3>
          <p class="post-card__excerpt">{post.data.excerpt}</p>
          <a class="post-card__link" href={`${baseUrl}posts/${post.slug}/`}>
            Ler artigo →
          </a>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    height: 58vh;
    min-height: 360px;
    margin-bottom: 2.5rem;
    background-image: var(--hero-image);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #e9e3dc;
  }

  @media (max-width: 768px) {
    .hero {
      height: 42vh;
      min-height: 240px;
      margin-bottom: 2rem;
    }
  }

  .post-list {
    display: grid;
    gap: 2rem;
  }

  .section-title {
    font-size: 1.2rem;
    line-height: 1.25;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: #8a7d70;
    margin: 0;
  }

  .post-list__grid {
    display: grid;
    gap: 1.8rem;
  }

  .post-card {
    background: #ffffff;
    border: 1px solid #e6e0d9;
    border-radius: 20px;
    padding: 1.8rem;
    display: grid;
    gap: 0.9rem;
    box-shadow: 0 12px 24px rgba(31, 31, 31, 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 30px rgba(31, 31, 31, 0.12);
  }

  .post-card__image {
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 16 / 9;
  }

  .post-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-card__image img {
    transform: scale(1.02);
  }

  .post-card__meta {
    color: #6d6156;
    font-size: 0.9rem;
    margin: 0;
  }

  .post-card h3 {
    margin: 0 0 0.2rem;
    font-size: 1.4rem;
    line-height: 1.23;
  }

  .post-card__excerpt {
    margin: 0;
    color: #4a3f35;
    font-family: "Iowan Old Style", "Palatino Linotype", "Palatino", "Book Antiqua", serif;
  }

  .post-card__link {
    font-weight: 600;
    color: #4a3f35;
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .post-card__link:hover {
    text-decoration: underline;
    transform: translateX(2px);
  }
</style>
