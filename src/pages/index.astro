---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import authors from "../data/authors.json";

const posts = await getCollection("posts");
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
const getAuthorName = (id) => authors.find((author) => author.id === id)?.name ?? "Autor";
const formatDate = (value) =>
  new Date(value).toLocaleDateString("pt-BR", {
    day: "2-digit",
    month: "long",
    year: "numeric",
  });
---
<BaseLayout>
  <section class="hero" aria-hidden="true"></section>

  <section class="post-list">
    <h2 class="section-title">Últimos artigos</h2>
    <div class="post-list__grid">
      {sortedPosts.map((post) => (
        <article class="post-card">
          <p class="post-card__meta">
            {formatDate(post.data.date)} · {getAuthorName(post.data.authorId)}
          </p>
          <h3>
            <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
          </h3>
          <p class="post-card__excerpt">{post.data.excerpt}</p>
          <a class="post-card__link" href={`/posts/${post.slug}/`}>
            Ler artigo →
          </a>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    height: 58vh;
    min-height: 360px;
    margin-bottom: 2.5rem;
    background-image: url("/images/perspectiva_crista_hero_final_wide.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #e9e3dc;
  }

  @media (max-width: 768px) {
    .hero {
      height: 42vh;
      min-height: 240px;
      margin-bottom: 2rem;
    }
  }

  .post-list {
    display: grid;
    gap: 2rem;
  }

  .section-title {
    font-size: 1.2rem;
    line-height: 1.25;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: #8a7d70;
    margin: 0;
  }

  .post-list__grid {
    display: grid;
    gap: 1.8rem;
  }

  .post-card {
    background: #ffffff;
    border: 1px solid #e6e0d9;
    border-radius: 20px;
    padding: 1.8rem;
    display: grid;
    gap: 0.9rem;
    box-shadow: 0 12px 24px rgba(31, 31, 31, 0.08);
  }

  .post-card__meta {
    color: #6d6156;
    font-size: 0.9rem;
    margin: 0;
  }

  .post-card h3 {
    margin: 0 0 0.2rem;
    font-size: 1.4rem;
    line-height: 1.23;
  }

  .post-card__excerpt {
    margin: 0;
    color: #4a3f35;
  }

  .post-card__link {
    font-weight: 600;
    color: #4a3f35;
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .post-card__link:hover {
    text-decoration: underline;
  }
</style>
