---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import authors from "../data/authors.json";

const posts = await getCollection("posts");
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
const getAuthorName = (id) => authors.find((author) => author.id === id)?.name ?? "Autor";
---
<BaseLayout>
  <section class="hero">
    <p class="kicker">Editorial</p>
    <h1>Perspectiva Cristã</h1>
    <p class="subtitle">
      Um espaço para leituras, fé e reflexão. Textos autorais com foco em propósito e
      conteúdo profundo.
    </p>
  </section>

  <section class="post-list">
    {sortedPosts.map((post) => (
      <article class="post-card">
        <a href={`/posts/${post.slug}/`} class="post-card__image">
          <img
            src={post.data.coverImage}
            alt={`Imagem de capa para ${post.data.title}`}
            loading="lazy"
          />
        </a>
        <div class="post-card__body">
          <p class="post-card__meta">
            {post.data.date} · {getAuthorName(post.data.authorId)}
          </p>
          <h2>
            <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
          </h2>
          <p>{post.data.excerpt}</p>
        </div>
      </article>
    ))}
  </section>
</BaseLayout>

<style>
  .hero {
    margin-bottom: 3rem;
  }

  .kicker {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.75rem;
    color: #8a7d70;
    margin-bottom: 0.5rem;
  }

  .hero h1 {
    font-size: clamp(2.4rem, 4vw, 3.2rem);
    margin: 0 0 1rem;
  }

  .subtitle {
    max-width: 560px;
    color: #4a3f35;
    font-size: 1.1rem;
  }

  .post-list {
    display: grid;
    gap: 2rem;
  }

  .post-card {
    background: #ffffff;
    border: 1px solid #e6e0d9;
    border-radius: 20px;
    overflow: hidden;
    display: grid;
    grid-template-columns: 1fr 1.1fr;
    gap: 0;
    min-height: 240px;
    box-shadow: 0 12px 24px rgba(31, 31, 31, 0.08);
  }

  .post-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-card__body {
    padding: 1.8rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .post-card__meta {
    color: #6d6156;
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  .post-card h2 {
    margin: 0 0 0.75rem;
    font-size: 1.5rem;
  }

  .post-card p {
    margin: 0;
    color: #4a3f35;
  }

  @media (max-width: 760px) {
    .post-card {
      grid-template-columns: 1fr;
    }

    .post-card__image img {
      height: 220px;
    }
  }
</style>
