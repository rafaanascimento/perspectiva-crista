---
const { title = "Perspectiva Cristã", description = "Reflexões, fé e propósito." } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---
<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a class="logo" href={baseUrl}>Perspectiva Cristã</a>
        <nav class="site-nav">
          <a href={baseUrl}>Início</a>
        </nav>
      </div>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="container">
        <p>Projeto editorial pessoal. Conteúdo autoral e em constante construção.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light;
    --font-sans: "Inter", "Segoe UI", system-ui, -apple-system, sans-serif;
    --font-serif: "Iowan Old Style", "Palatino Linotype", "Palatino", "Book Antiqua", serif;
    --color-bg: #f7f5f2;
    --color-surface: #ffffff;
    --color-text: #1f1f1f;
    --color-muted: #6d6156;
    --color-soft: #e6e0d9;
    --color-accent: #4a3f35;
    font-family: var(--font-sans);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.7;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    background-color: var(--color-bg);
    color: var(--color-text);
  }

  a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--color-accent);
  }

  img {
    max-width: 100%;
    display: block;
  }

  .container {
    width: min(720px, 92vw);
    margin: 0 auto;
  }

  .site-header {
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-soft);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .site-header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 0;
  }

  .logo {
    font-weight: 700;
    font-size: 1.25rem;
    letter-spacing: 0.02em;
  }

  .site-nav a {
    font-size: 0.95rem;
    color: var(--color-accent);
  }

  main {
    padding: 2.5rem 0 4rem;
  }

  .site-footer {
    border-top: 1px solid var(--color-soft);
    padding: 2rem 0;
    font-size: 0.9rem;
    color: var(--color-muted);
    background: var(--color-surface);
  }
</style>
